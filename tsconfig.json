{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "es2020",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true,
    "incremental": true
  },
  "include": [
    "src/mvp/**/*",
    "src/services/opportunities/**/*",
    "src/services/revenue/**/*",
    "src/services/integrations/**/*",
    "src/services/monitoring/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "src/examples",
    "src/experimental",
    ".next",
    "out"
  ]
}
