{
  "functions": {
    "source": "src/functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/awin-webhook",
        "function": "awinWebhook"
      }
    ]
  },
  "database": {
    "rules": {
      "rules": {
        ".read": "auth != null",
        ".write": "auth != null",
        "transactions": {
          ".indexOn": ["timestamp", "status"]
        }
      }
    }
  }
}
