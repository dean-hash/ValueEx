rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down by default
    match /{document=**} {
      allow read, write: false;
    }
    
    // Transactions collection
    match /transactions/{transactionId} {
      // Only allow server-side access via Admin SDK
      allow read, write: false;
      
      // For future: Allow user to read their own transactions
      // allow read: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Merchants collection
    match /merchants/{merchantId} {
      // Only allow server-side access for writes
      allow write: false;
      
      // Allow authenticated read access for merchant data
      allow read: if request.auth != null;
    }
    
    // Users collection (for future multi-user support)
    match /users/{userId} {
      // Users can only read/write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
